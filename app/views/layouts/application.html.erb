<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>MyPage</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Noto+Sans+JP:400,700,900&display=swap" rel="stylesheet">
  </head>

  <body>
    <header class="header">
      <div class="inner">
        <div class="nav">
          <div class="nav__left">
          </div>
          <% if user_signed_in? %>
            <div class="nav__right">
              <%= search_form_for @search, url: search_mypages_path do |form| %>
                <%= form.text_field :title_or_catch_copy_or_concept_cont, placeholder: "投稿を検索する", class: "search-input" %>
                <%= form.submit "検索", class: "search-btn" %>
              <% end %>
              <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: :nav__logout %>
              <%= link_to "投稿する", new_mypage_path, class: :nav__btn %>
            </div> 
            <% else %> 
            <div class="nav__right">
              <%= link_to "利用規約", root_path, class: :nav__btn %>
              <%= link_to "ログイン", new_user_session_path, class: :nav__btn %>
              <%= link_to "新規登録", new_user_registration_path, class: :nav__btn %>
            </div>
          <% end %>
        </div>
      </div>
    </header>
    <%= yield %>
    <footer class="footer">
      <p class="copyright">Copyright © MY PAGE All rights reserved.</p>
    </footer>
  </body>
</html>
