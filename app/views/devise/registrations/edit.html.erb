<div class="card col-sm-6 mx-auto mt-5">
  <div class="card-body">
    <h3 class="text-center mt-1 mb-4">アカウントを編集する</h3>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
 
    <div class="form-group">
      <%= f.label :email, "Eメール", :class => "form-label" %>
      <%= f.email_field :email, autocomplete: "email", :class => "form-control" %>
    </div>
 
    <div class="form-group">
      <%= f.label :gender, '性別', :class => "form-label" %>
      <%= f.select :gender, [["",""], ["女性","女性"], ["男性","男性"]], {},   :class => "form-control" %>
      <div class="small form-text">性別を選択してくだい入力</div>
    </div>

    <div class="form-group">
      <%= f.label :introduction, '自己紹介', :class => "form-label" %>
      <%= f.text_area :introduction, :maxlength => "255", :size => "80x5",  :class => "form-control"  %>
      <div class="small form-text">自己紹介</div>
    </div>

    <div class="form-group">
      <%= f.label :twitter, 'twitter', :class => "form-label" %>
      <%= f.text_field :twitter, :class => "form-control"  %>
      <div class="small form-text">twitter</div>
    </div>

    <div class="form-group">
      <%= f.label :facebook, 'facebook', :class => "form-label" %>
      <%= f.text_field :facebook, :class => "form-control"  %>
      <div class="small form-text">facebook</div>
    </div>

    <div class="form-group">
      <%= f.label :instagram, 'instagram', :class => "form-label" %>
      <%= f.text_field :instagram, :class => "form-control"  %>
      <div class="small form-text">instagram</div>
    </div>

    <div class="form-group">
      <%= f.label :youtube, 'youtube', :class => "form-label" %>
      <%= f.text_field :youtube, :class => "form-control"  %>
      <div class="small form-text">youtube</div>
    </div>

  <%= render partial: 'mypages/mypage', collection: @mypages %>
    <div class="actions">
      <%= f.submit "更新する", :class => "btn btn-primary btn-block" %>
      <%= link_to "キャンセルして戻る", :back, :class => "btn btn-secondary btn-block" %>
    </div>
    <% end %>
  </div>
</div>


