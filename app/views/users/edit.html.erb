<%= form_with(model: @mypage, local: true) do |f|%>

<h4>プロフィールの編集</h4>
<div class="form-group">
<%= f.label :name, '名前' %>
<%= f.text_field :nickname, class: 'form-control' %>
</div>
 
<div class="form-group">
<%= f.label :email, 'メールアドレス' %>
<%= f.email_field :email, class: 'form-control' %>
</div>
 
<div class="col-xs-6 form-group">
    <%= f.label :gender, '性別', class:'control-label' %>
    <%= f.select :gender, [["",""], ["女性","女性"], ["男性","男性"]], {},   class: 'form-control' %>
</div>
 
<div class="form-group">
<%= f.label :introduction, '自己紹介' %>
<%= f.text_area :introduction, :maxlength => "255", :size => "80x5",  class: 'form-control'  %>
</div>
 
 
<div class="accbox">
  <label for="label1">パスワードを変更するかたはこちら</label>
  <input type="checkbox" id="label1" class="cssacc" />
  <div class="accshow">
    <div class="form-group">
      新しいパスワード<br>
      <%= f.password_field :password, class: 'form-control' %>
    </div>
 
    <div class="form-group">
      新しいパスワードを再入力<br>
      <%= f.password_field :password_confirmation, class: 'form-control' %>
    </div>
  </div>
</div>
 
</div>
 
<div class="al-c"><%= f.submit 'プロフィール編集を完了する', class: 'btn btn-primary' %></div>

<% end %>