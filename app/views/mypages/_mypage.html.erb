<div class="card">
  <%= link_to image_tag(mypage.image, class: :card__img ), mypage_path(mypage.id), method: :get %>
  <div class="card__body">
    <%= link_to mypage.title, mypage_path(mypage.id), method: :get, class: :card__title%>
    <p class="card__summary">
      <%= link_to (mypage.catch_copy),root_path %>
    </p>
    <%= link_to "#{mypage.user.name}さんの講座" , user_path(mypage.user.id), class: :card__user %>
  </div>
</div>